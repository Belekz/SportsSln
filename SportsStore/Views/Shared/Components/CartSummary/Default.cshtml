@model Cart

<div class="">

    @switch (Model.Lines.Count())
    {
        case 1:
            <small class="navbar-text">
                <b>Your cart:</b>
                @Model.Lines.Sum(x => x.Quantity) item
                @Model.ComputeTotalValue().ToString("c")
            </small>
            break;

        case 0:
            <small class="navbar-text">
            </small>
            break;
        default:
            <small class="navbar-text">
                <b>Your cart:</b>
                @Model.Lines.Sum(x => x.Quantity) items
                @Model.ComputeTotalValue().ToString("c")
            </small>
            break;

    }

    <a class="btn btn-sm btn-secondary navbar-btn" asp-page="/Cart" asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
        <i class="fa fa-shopping-cart"></i>
    </a>
</div>